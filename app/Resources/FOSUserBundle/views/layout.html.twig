{% extends 'PraiseItBundle::cover.html.twig' %}

{% block favicon %}
  <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
{% endblock %}

{% block title %}
  Praise The Sun!!
{% endblock %}

{% block masthead %}
    Praise The Sun!
{% endblock %}

{% block navbar %}
  <li class="active"><a href="{{ path('Altar_of_The_Sun') }}">Home</a></li>
                  <li>{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                <a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% else %}
                <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
            {% endif %}</li>
                  <li>{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        &nbsp;
                      {% else %}
                        <a href="{{ path('fos_user_registration_register') }}">SignUp</a>
                      {% endif %}</li>
                  <li><a href="#"><img src="{{ asset('bundles/praiseit/images/sun.png') }}" length="30px" width="30px"></a></li>
{% endblock %}

{% block header %}
  <div class="row">
    <div>
      <img src="{{ asset('bundles/praiseit/images/Solaire2.png') }}" length="40px" width="40px" margin="15px">  Welcome to the Altar  <img src="{{ asset('bundles/praiseit/images/Solaire.png') }}" length="40px" width="40px" margin="15px">
    </div>
  </div>
{% endblock %}

{% block plead2 %}

        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}

        <div>
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>

{% endblock %}

{% block footer %}
  Praise The Sun (c)2015 by <a href="http://anthonyplummer.comoj.com">Anthony Plummer</a> Praise it!
{% endblock %}
